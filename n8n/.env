# n8n Host and Protocol
N8N_HOST=host.docker.internal # Change to your domain if using a reverse proxy
N8N_PROTOCOL=http # Change to https if using a reverse proxy with SSL

# PostgreSQL Database Credentials (n8n will connect to this)
POSTGRES_DB=n8n
POSTGRES_USER=n8nuser
POSTGRES_PASSWORD=your_strong_postgres_password

# n8n Basic Authentication (for accessing the n8n UI)
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_strong_n8n_password

# SMTP Settings (Optional - for sending emails from n8n)
# If N8N_EMAIL_MODE is 'none', you can remove these.
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_SENDER=n8n@yourdomain.com

# Timezone for n8n (important for cron triggers)
# Find your timezone here: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TZ=America/Sao_Paulo # This is set for Curitiba, Brazil